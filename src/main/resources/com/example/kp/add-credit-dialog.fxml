<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefWidth="339.0" vgap="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kp.controller.credit.AddCreditDialog">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Клиент:" GridPane.columnIndex="0" />
      <Label text="Дата:" GridPane.rowIndex="3" />
      <Label text="Сумма:" GridPane.rowIndex="2" />
      <TextField fx:id="sumField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Label text="Вид кредита:" GridPane.rowIndex="1" />
      <Button fx:id="okButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleOk" text="ОК" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="5" />
      <Label fx:id="errorLabel" GridPane.columnSpan="2" GridPane.rowIndex="4" />
      <ComboBox fx:id="userField" prefWidth="150.0" GridPane.columnIndex="1" />
      <ComboBox fx:id="kindCreditField" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <DatePicker fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
   </rowConstraints>
